<div class="chapter-container">  
  <%= react_component 'Chapter', chapter: @chapter, book: @book %>
</div>

<% unless @chapter.number == 6 %>
  <%= link_to "", book_chapter_path(@book, @chapter.number + 1), class: "button btnFloat btnCream" %>
<% end %>

<% unless @chapter.number == 1 %>
  <h3><%= link_to "Go Back", book_chapter_path(@book, @chapter.number - 1) %></h3>
<% end %>
